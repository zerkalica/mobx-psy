{
    "exclude": [
        ".cache",
        "**/dist",
        "**/node_modules",
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "module": "esnext",
        "target": "es5",
        "composite": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "baseUrl": "packages",
        "paths": {
            "*": ["./*/src"]
        },
    }
}
