{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "version": {
      "conventional-commits": true,
      "yes": true,
      "allowBranch": [
        "master",
        "hotfix/*",
        "feature/*"
      ],
      "message": "chore(release): %s [ci skip]"
    }
  },
  "version": "independent"
}
